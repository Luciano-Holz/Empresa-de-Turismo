
<style>

  section {
    background-color: dodgerblue;
    width: 500px;
    margin: 0 auto;
  }

  h1{
    padding: 10px 0 0 10px;
  }

  div {
    margin-left: 70px ;
  }

  label {
    font-size: 15px;
    font-weight: 800;
    text-transform: uppercase;
  }

  input {
    width: 300px;
    height: 30px;
  }

  button {
    background-color: #363636;
    color: white;
    width: 80px;
    height: 30px;
    margin: 5px 50px 15px 350px;
  }


</style>
<section>
  <h1>Formulário para Cadastrar Motorista</h1>
  <form action="/add-motorista" method="POST">
    <div>
      <label for="">Nome</label><br>
      <input type="text" name="nome" placeholder="Digite o nome completo">
    </div>

    <div>
      <label for="">Nascimento</label><br>
      <input type="text" name="dataNasc" placeholder="Digite a data de nascimento YY/MM/DD">
    </div>

    <div>
      <label for="">Sexo</label><br>
      <input type="text" name="sexo" placeholder="Digite o sexo M ou F">
    </div>

    <div>
      <label for="">Telefone</label><br>
      <input type="text" name="telefone" placeholder="Digite o telefone com codigo de area">
    </div>

    <div>
      <label for="">Rua</label><br>
      <input type="text" name="rua" placeholder="Digite o nome da rua">
    </div>

    <div>
      <label for="">Número</label><br>
      <input type="text" name="numero"placeholder="Digite o numero da casa">
    </div>

    <div>
      <label for="">Bairro</label><br>
      <input type="text" name="bairro" placeholder="Digite o nome do bairro">
    </div>

    <div>
      <label for="">Cidade</label><br>
      <input type="text" name="cidade" placeholder="Digite o nome da cidade">
    </div>

    <div>
      <label for="">UF</label><br>
      <input type="text" name="uf"placeholder="Digite a UF ex: RS">
    </div>

    <button type="submit">Cadastrar</button>

  </form>
</section>
