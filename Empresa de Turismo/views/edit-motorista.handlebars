
<style>

  section {
    background-color: sandybrown;
    width: 500px;
    margin: 0 auto;
  }

  h1{
    padding: 10px 0 5px 10px;
  }

  div {
    margin-left: 70px ;
  }

  label {
    font-size: 15px;
    font-weight: 800;
    text-transform: uppercase;
  }

  input {
    width: 300px;
    height: 30px;
  }

  button {
    background-color: goldenrod;
    width: 80px;
    height: 30px;
    margin: 5px 50px 15px 350px;
  }


</style>
<section>
  <h1>Formulário para Editar Motorista</h1>
  <form action="/add-motorista" method="POST">
    <input type="hidden" name="id" value="{{motorista.id}}">
    <div>
      <label for="">Nome</label><br>
      <input type="text" name="nome" value="{{motorista.nome}}">
    </div>

    <div>
      <label for="">Nascimento</label><br>
      <input type="text" name="dataNasc" value="{{motorista.dataNasc}}">
    </div>

    <div>
      <label for="">Sexo</label><br>
      <input type="text" name="sexo" value="{{motorista.sexo}}">
    </div>

    <div>
      <label for="">Telefone</label><br>
      <input type="text" name="telefone" value="{{motorista.telefone}}">
    </div>

    <div>
      <label for="">Rua</label><br>
      <input type="text" name="rua" value="{{motorista.rua}}">
    </div>

    <div>
      <label for="">Número</label><br>
      <input type="text" name="numero" value="{{motorista.numero}}">
    </div>

    <div>
      <label for="">Bairro</label><br>
      <input type="text" name="bairro" value="{{motorista.bairro}}">
    </div>

    <div>
      <label for="">Cidade</label><br>
      <input type="text" name="cidade" value="{{motorista.cidade}}">
    </div>

    <div>
      <label for="">UF</label><br>
      <input type="text" name="uf" value="{{motorista.uf}}">
    </div>

    <button type="submit">Confirmar</button>

  </form>
</section>
